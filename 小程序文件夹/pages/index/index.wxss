/**index.wxss**/
/* 首页新闻列表 */
.index_news image{height: 425rpx;width: 100%;display: block}
.index_news .bt{font-size: 30rpx;line-height: 66rpx;font-weight: bold;color: #2c2c2c;margin-top: 12rpx;}
.index_news{font-size: 24rpx;line-height: 42rpx;color: #7c7c7c;}
.index_news span{color: #fff;background: #ffba00;padding: 0 8rpx;border-radius: 3rpx;margin-left: 30rpx;line-height: 26rpx;font-size: 20rpx;}
.index_news .on{display: inline;}
.index_news .a1{margin-bottom: 20rpx;}
.index_news .a2{height:126rpx;}
/* 首页新闻评论那排 */
.index_news_f{padding: 20rpx 33rpx;}
.index_news_f .a3{padding-left: 61rpx;height: 54rpx;border: 1rpx solid #f3f3f3;line-height: 54rpx;width: 64rpx;border-radius: 100rpx;font-size: 24rpx;color: #7c7c7c;}
.index_news_like{background: url(http://yutingdq.gotoip4.com/xpx/index_news_like1.png) no-repeat 15rpx center;background-size: 23rpx 22rpx !important;margin-right: 20rpx;}
.index_dz{color: #f89e00;background: url(http://yutingdq.gotoip4.com/xpx/index_news_like2.png) no-repeat 15rpx center;}
.index_h{height: 20rpx;background: #eaeaea;}
/* 首页新闻评论 */
.index_news_f .comment{background: url(http://yutingdq.gotoip4.com/xpx/index_news_f_comment.png) no-repeat 21rpx 15rpx;background-size: 28rpx 24rpx;}
.index_news_f .share{background: url(http://yutingdq.gotoip4.com/xpx/index_news_share.png) no-repeat 24rpx 17rpx;background-size: 20rpx 20rpx;margin-left: 20rpx;}
.index_news_f .forward{background: url(http://yutingdq.gotoip4.com/xpx/index_news_forward.png) no-repeat 22rpx 15rpx;background-size: 23rpx 22rpx;}
/* 分享弹出层 */
.index_news_fx_k{position: fixed;width: 100%;height: 100vh;top: 0;left: 0;z-index: 5;background: rgba(0, 0, 0,.7);}
.index_news_fx{position: fixed;width: 100%;height: 279rpx;background: #fff;bottom: 0;left: 0;z-index: 6;padding: 26rpx 0 0;border-top: 1rpx solid #eaeaea;text-align: center;}
.index_news_fx .a1{font-size: 24rpx;color: #a4a4a4;line-height: 96rpx;}

.index_news_fx image{height: 53rpx;display: block;margin: 0 auto}
.index_news_fx .img1{width: 53rpx;}
.index_news_fx .img2{width: 63rpx;}
.index_news_fx .a21{display: inline-block;font-size: 28rpx;color: #121212;line-height: 98rpx;width: 200rpx;}
